<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent">
         <LinearLayout
             android:id="@+id/logos"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            
             >
            
             <ImageView 
                 android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/googletv_logo"
                android:layout_margin="2dp"
                />
             <ImageView 
                 android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/android_logo"
                android:layout_margin="2dp"
                />
              <ImageView 
                 android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/appengine_logo"
                android:layout_margin="2dp"
                />
              <ImageView 
                 android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/gwt_logo"
                android:layout_margin="2dp"
                />
            
             </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@id/logos">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Pongan"
                android:textColor="@android:color/white"
                android:textSize="80sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/qrcode_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/controller_qrcode"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>